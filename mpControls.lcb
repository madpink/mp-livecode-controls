  put [] into mHandles
  put [] into mCurrentSliderColor
  put 1 into mCurrentColumn
  put 1 into mControlInColumn

  put the number of elements in mData into mControlCount
  if "props" is among the keys of mData then
     subtract 1 from mControlCount
  end if

  setCurrentColorSet()
  drawBaseItems()
  calcControlSize()
  clearDebugInfo(mControlType)
  if mControlType is "Dialog Box" then
    paintDialogBox()
  else if mControlType is "Button Bar" then
    paintButtonBar()
  else if mControlType is "Numeric Up/Down" then
    paintUpDown()
  else if mControlType is "Form Backdrop" then
    paintFormBackdrop()
  else
    paintControls()
  end if

  setAppData(mAppData)
end handler

private handler paintControls()
  variable tCount as Number

  set the top of mControlRect to the top of mCurrentRect + mControlBufferV
  set the left of mControlRect to the left of mCurrentRect + mControlBufferH

  repeat with tCount from 1 up to mControlCount
    put mkStr(tCount) into mCurrentControlKey
    if mData[mCurrentControlKey]["show"] is "false" then
      push "skip" onto mLocList
    else
      if mControlType is "Button Bar" then
         paintButtonBar()
       else if mControlType is "Switches" then
         createSwitch()
      else if mControlType is "Progress Bars" then
         createProgressBar()
       else if mControlType is "Numeric Up/Down" then
         paintUpDown()
       else if mControlType is "Sliders" then
         createSlider()
       else if mControlType is "Form Backdrop" then
         paintFormBackdrop()
       end if
    end if
  end repeat
  setAppData(mAppData)
end handler

